@model AzureProject.Models.Search.ImagesSearchPageModel
@{
	ViewData["Title"] = "Image Page";
}

<div class="text-center">
	<h1 class="display-4">Cognitive Images Search</h1>
</div>

<div class="alert alert-secondary" role="alert">
	<ul class="nav nav-pills">
		<li class="nav-item">
			<a class="nav-link" asp-action="Index">Web Pages</a>
		</li>
		<li class="nav-item">
			<a class="nav-link active" aria-current="page" href="#">Images</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-action="News">News</a>
		</li>
	</ul>
</div>
<form>
	<div class="input-group mb-3">
		<span class="input-group-text" id="search-addon1"><i class="bi bi-search"></i></span>
		<input type="text" class="form-control" placeholder="Start typing"
			   name="search-phrase" value="@(Model?.SearchResponse?.queryContext.originalQuery)"
			   aria-label="Search" aria-describedby="search-addon">
		<button class="btn btn-outline-secondary" type="submit">Search</button>
	</div>
</form>

@if(Model?.SearchResponse != null)
{
	foreach (var item in Model.SearchResponse.value)
	{
		@Html.DisplayFor(m => item, "ImageSearchItem")
	}
}